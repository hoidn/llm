{
  "mcpServers": {
    "aider-mcp-server": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        ".",
        "run",
        "aider-mcp-server",
        "--editor-model",
        "gemini/gemini-2.5-pro-preview-03-25",
        "--current-working-dir",
        "."
      ],
      "env": {}
    }
  }
}
{
  "mcpServers": {
    "aider-mcp-server": {
      "transport": "stdio",
      "command": "python",
      "args": [
        "-m",
        "aider_mcp_server.server",
        "--working-dir",
        "."
      ],
      "env": {
        "EXAMPLE_VAR": "example_value_if_needed"
      },
      "description": "Aider code assistant via MCP (STDIO)"
    }
  }
}
